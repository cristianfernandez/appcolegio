{% extends 'TemasTemasBundle::admin.html.twig' %}

{% block article %}

    <h1>Lista de Notas</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Asignatura</th>
                <th>Calificación</th>
                <th>Descripción</th>
                <th>Fecha</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('nota_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idAsignatura }}</td>
                <td>{{ entity.calificacion }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('nota_show', { 'id': entity.id }) }}" ><i class="icon-list"> </i></a>
                    </li>
                    <li>
                        <a href="{{ path('nota_edit', { 'id': entity.id }) }}"><i class="icon-edit"> </i></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('nota_new') }}">
                <i class="icon-plus-sign"></i>
                Registrar Nota
            </a>
        </li>
    </ul>
{% endblock %}
