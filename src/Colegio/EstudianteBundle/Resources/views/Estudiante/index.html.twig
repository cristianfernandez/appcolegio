{% extends 'TemasTemasBundle::admin.html.twig' %}

{% block article %}

    <h1>Lista de Estudiantes</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo Identificación</th>
                <th>Primer Nombre</th>
                <th>Segundo Nombre</th>
                <th>Primer Apellido</th>
                <th>Segundo Apellido</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Nui</th>
                <th>Nuip</th>
                <th>N° Documento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('estudiante_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idTipoIdentificacion }}</td>
                <td>{{ entity.primerNombre }}</td>
                <td>{{ entity.segundoNombre }}</td>
                <td>{{ entity.primerApellido }}</td>
                <td>{{ entity.segundoApellido }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.nui }}</td>
                <td>{{ entity.nuip }}</td>
                <td>{{ entity.numeroDocumento }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('estudiante_show', { 'id': entity.id }) }}" ><i class="icon-list" onmouseover="showModalDialog(Hola)"> </i></a>
                    </li>
                    <li>
                        <a href="{{ path('estudiante_edit', { 'id': entity.id }) }}"><i class="icon-edit"> </i></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('estudiante_new') }}">
                <i class="icon-plus-sign"></i>
                Crear un nuevo estudiante
            </a>
        </li>
    </ul>
{% endblock %}
