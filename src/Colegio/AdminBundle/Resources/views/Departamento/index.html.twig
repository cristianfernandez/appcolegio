{% extends 'TemasTemasBundle::admin.html.twig' %}

{% block article %}
    <h1>Listar Departamento</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre departamento</th>
                <th>Accciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('departamento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreDepartamento }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('departamento_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('departamento_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('departamento_new') }}">
                Crear Nuevo
            </a>
        </li>
    </ul>
    {% endblock %}
