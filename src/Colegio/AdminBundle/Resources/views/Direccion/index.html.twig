{% extends 'TemasTemasBundle::admin.html.twig' %}

{% block article %}
    <h1>Tú Dirección</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Direccioncompleta</th>
                <th>Sede</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('direccion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.direccionCompleta }}</td>
                <td>{{ entity.idSede }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('direccion_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% for rol in app.user.roles %}
    {#   #}
    {% if rol.role == 'ROLE_SUPER_ADMIN' %}
        <a href="{{ path('direccion_new') }}"><i class="icon-plus-sign">Crear nueva Dirección</i></a>
    {% elseif rol.role == 'ROLE_ADMIN' %}
        <a href="{{ path('colegio_admin_perfil') }}"><i class="icon-arrow-left"> Volver</i></a>
    {% endif %}
{% endfor %}
            
{% endblock %}
