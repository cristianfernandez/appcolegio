{% extends 'TemasTemasBundle::admin.html.twig' %}

{% block article %}
    <h1>Listado de Rector</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sede</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('rector_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idSede}}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellidos }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telefono }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('rector_show', { 'id': entity.id }) }}"><i class="icon-list"></i></a>
                    </li>
                    <li>
                        <a href="{{ path('rector_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('rector_new') }}">
                Crear Nuevo Rector
            </a>
        </li>
    </ul>
    {% endblock %}
