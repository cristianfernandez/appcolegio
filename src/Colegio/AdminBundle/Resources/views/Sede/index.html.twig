{% extends 'TemasTemasBundle::admin.html.twig' %}

{% block article %}
    <h1>Lista de Sedes</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombresede</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('sede_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreSede }}</td>
                <td>{{ entity.estado }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('sede_show', { 'id': entity.id }) }}"><i class="icon-list"></i></a>
                    </li>
                    <li>
                        <a href="{{ path('sede_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <ul>
        <li>
            <a href="{{ path('sede_new') }}">
                <i class="icon-plus-sign"></i>
                Crear nueva Sede
            </a>
        </li>
    </ul>
    {% endblock %}
