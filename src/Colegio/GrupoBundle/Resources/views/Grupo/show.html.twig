{% extends 'TemasTemasBundle::admin.html.twig' %}

{% block article %}
    <h1>Grupo</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <th>Idnivel</th>
                <th>Iddocenteresponsable</th>
                <th>Idsede</th>
                <th>Nombre</th>
                <th>Activo</th>
            </tr>
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.idNivel }}</td>
                <td>{{ entity.idDocenteResponsable }}</td>
                <td>{{ entity.idSede }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.activo }}</td>
            </tr>
        </tbody>
    </table>

<ul class="record_actions">
    <li>
        <a href="{{ path('grupo_edit', { 'id': entity.id }) }}" class="btn btn-small btn-success"><i class="icon-edit"> </i></a>
        {{ form(delete_form) }}
    </li>
    <li>
        <a href="{{ path('grupo') }}"><i class="icon-arrow-left"> Volver a la lista</i></a>
    </li>
</ul>
{% endblock %}
