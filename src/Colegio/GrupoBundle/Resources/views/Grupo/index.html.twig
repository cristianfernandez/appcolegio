{% extends 'TemasTemasBundle::admin.html.twig' %}

{% block span %}
span5
{% endblock %}

{% block headerarticle %}
<i class="icon-th-list"></i><h3> Sedes Activas</h3>
{% endblock %}

{% block article %}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombresede</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
